<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/common_top"></include>
    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="540dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#ffffff"
                android:scaleType="fitXY"
                android:src="@drawable/me_back" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/circleImageView"
                    android:layout_width="70dp"
                    android:layout_height="76dp"
                    android:src="@drawable/user_unlog"
                    android:layout_marginRight="12dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/up_re"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingTop="6dp"
                    android:layout_marginRight="12dp"/>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_myread"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_my_read"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/massage" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_my_read"
                android:text="基本信息"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="35sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="326dp"
                android:src="@drawable/right" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_white"></LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_mydate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_my_date"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/activity" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_my_date"
                android:text="我的活动"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="35sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="326dp"
                android:src="@drawable/right" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_white"></LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_my_alarm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/my_alarm"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/alarm" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/my_alarm"
                android:text="消息提醒"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="35sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="326dp"
                android:src="@drawable/right" />

            <view
                class="android.support.v4.widget.Space"
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="367dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_white"></LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_my_flesh"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/myflesh"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/update" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/myflesh"
                android:text="检查更新"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="25sp"
                android:layout_height="35sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="326dp"
                android:src="@drawable/right" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_white"></LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_my_answer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/myanswer"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/about" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/myanswer"
                android:text="关于app"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="25sp"
                android:layout_height="35sp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="326dp"
                android:src="@drawable/right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="603dp"
                android:layout_marginStart="117dp"
                android:layout_toEndOf="@+id/textView4"
                android:background="@color/black"></LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_white"></LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
